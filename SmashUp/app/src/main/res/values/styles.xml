<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
	</style>
	<style name="STheme" parent="MyTheme.Base">
		<item name="android:editTextColor">#295055</item> 
		<item name="android:textColorPrimary">@color/primary_text</item>
		<item name="android:textColorSecondary">@color/secondary_text</item>
		<item name="android:textColorTertiary">#295055</item>
		<item name="android:textColorPrimaryInverse">#295055</item>
		<item name="android:textColorSecondaryInverse">#295055</item>
		<item name="android:textColorTertiaryInverse">#295055</item>
	</style>
	
	<style name="ThemeOverlay.MyDarkButton" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorButtonNormal">@color/primary</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:textColor">@android:color/white</item>
		<item name="android:textStyle">bold</item>
    </style>
	<style name="MyTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowActionBar">false</item>
		<item name="colorPrimary">@color/primary</item>
		<!--<item name="windowActionBar">false</item>-->
		<item name="colorPrimaryDark">@color/primary_dark</item>
		<item name="colorAccent">@color/accent</item>
		<item name="colorControlNormal">@color/grey_700</item>
		<!-- Applies to views in their activated state (i.e checked or switches) -->
		<item name="colorControlActivated">@color/deep_orange_a700</item>
		<!-- Applied to framework control highlights (i.e ripples or list selectors) -->
		<item name="colorControlHighlight">@color/blue_grey_200</item>

		<!-- Enable these below if you want clicking icons to trigger a ripple effect -->
		<item name="selectableItemBackground">?android:selectableItemBackground</item>
		<item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item> 
		
	</style>
	<style name="RobotoTextViewStyleBold" parent="android:Widget.TextView">
		<item name="android:fontFamily">sans-serif-medium</item>
	</style>
	<style name="RobotoTextViewStyleLight" parent="android:Widget.TextView">
		<item name="android:fontFamily">sans-serif-light</item>
	</style>
	<style name="RobotoButtonStyle" parent="android:Widget.Material.Button">
		<item name="android:fontFamily">sans-serif-medium</item>
	</style>
	<style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
		<!-- This would set the toolbar's background color -->
		<item name="android:background">@color/primary</item>
		<!-- android:textColorPrimary is the color of the title text in the Toolbar  -->

		<!-- Tints the input fields like checkboxes and text fields -->
		<item name="colorAccent">@color/accent</item>
		<!-- Applies to views in their normal state. -->
		<item name="colorControlNormal">@color/icons</item>
		<!-- Applies to views in their activated state (i.e checked or switches) -->
		<item name="colorControlActivated">@color/deep_orange_a700</item>
		<!-- Applied to framework control highlights (i.e ripples or list selectors) -->
		<item name="colorControlHighlight">@color/deep_orange_a700</item>

		<!-- Enable these below if you want clicking icons to trigger a ripple effect -->

		<item name="selectableItemBackground">?android:selectableItemBackground</item>
		<item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item> 

	</style>
</resources>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent"
	android:layout_width="match_parent">

	<TextView
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_width="match_parent"
		android:text="Medium Text"
		android:id="@+id/attachimagefragTextView1"
		android:gravity="center"
		android:textColor="#FFFFFF"
		style="@style/RobotoTextViewStyleBold"
		android:padding="10dp"
		android:background="#FF6157"/>

	<android.support.v7.widget.CardView
		xmlns:card_view="http://schemas.android.com/apk/res-auto"
		android:id="@+id/card_view_badge"
		android:layout_below="@id/attachimagefragTextView1"
		android:layout_gravity="center"
		card_view:cardBackgroundColor="@color/accent"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		card_view:cardCornerRadius="2dp"
		android:layout_margin="10dp"
		android:layout_centerHorizontal="true">

		<ImageView
			android:layout_height="250dp"
			android:layout_width="250dp"
			android:src="@drawable/ic_plus_box"
			android:scaleType="centerInside"
			android:id="@+id/attachimagefragImageView"/>

	</android.support.v7.widget.CardView>

	<ImageView
		android:layout_height="40dp"
		android:layout_width="40dp"
		android:src="@drawable/ic_upload"
		android:layout_below="@id/attachimagefragTextView1"
		android:layout_alignParentRight="true"
		android:layout_margin="10dp"
		android:padding="5dp"
		android:id="@+id/attachimagefragImageViewSend"/>

</RelativeLayout>


<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:card_view="http://schemas.android.com/apk/res-auto"
	android:id="@+id/card_view"
	android:layout_margin="2dp"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	card_view:cardCornerRadius="2dp"
	android:layout_centerInParent="true">

	<RelativeLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent">

		<ImageView
			android:layout_height="55dp"
			android:layout_width="55dp"
			android:src="@android:drawable/ic_delete"
			android:id="@+id/lastsentmodelImageView"/>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="vertical"
			android:layout_toRightOf="@id/lastsentmodelImageView">

			<TextView
				android:layout_height="wrap_content"
				android:id="@+id/last_sent_modelTextViewName"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:layout_width="wrap_content"
				android:text="Medium Text"
				android:layout_margin="5dp"
				android:singleLine="true"
				android:textColor="#3C3C3C"
				android:textSize="17sp"/>

			<TextView
				android:layout_height="wrap_content"
				android:id="@+id/last_sent_modelTextViewArtista"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_width="wrap_content"
				android:text="Small Text"
				android:layout_marginLeft="5dp"/>

		</LinearLayout>

		<android.support.v7.widget.CardView
			xmlns:card_view="http://schemas.android.com/apk/res-auto"
			android:id="@+id/card_view_badge"
			android:layout_alignParentRight="true"
			android:layout_gravity="center"
			card_view:cardBackgroundColor="@color/accent"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			card_view:cardCornerRadius="4dp"
			android:layout_margin="3dp">

			<TextView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_marginLeft="5dp"
				android:layout_marginRight="5dp"
				android:text="0"
				android:textColor="#fff"
				android:id="@+id/last_sent_modelTextViewSent"
				style="@style/RobotoTextViewStyleBold"
				android:padding="2dp"/>

		</android.support.v7.widget.CardView>

	</RelativeLayout>

</android.support.v7.widget.CardView>


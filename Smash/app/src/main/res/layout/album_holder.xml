<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:card_view="http://schemas.android.com/apk/res-auto"
	android:id="@+id/card_view_badge"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	card_view:cardCornerRadius="4dp"
	android:layout_margin="3dp">

	<RelativeLayout
		android:layout_height="wrap_content"
		android:layout_width="180dp">

		<ImageView
			android:layout_height="200dp"
			android:layout_width="180dp"
			android:src="@drawable/ic_album"
			android:layout_centerHorizontal="true"
			android:id="@+id/albumholderImageView"/>

		<TextView
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="wrap_content"
			android:text="Medium Text"
			android:layout_below="@id/albumholderImageView"
			android:id="@+id/albumholderTextView1"
			android:layout_marginTop="2dp"
			android:layout_margin="2dp"
			android:textColor="#242424"
			android:textSize="15sp"
			android:singleLine="true"/>

		<TextView
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:layout_width="wrap_content"
			android:text="Small Text"
			android:layout_below="@id/albumholderTextView1"
			android:id="@+id/albumholderTextView2"
			android:layout_marginTop="2dp"
			android:layout_margin="2dp"
			android:singleLine="true"
			android:textColor="#4C4C4C"/>

	</RelativeLayout>

</android.support.v7.widget.CardView>

